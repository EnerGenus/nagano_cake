<h1>注文履歴詳細</h1>

<div>
  <table>
    <tr>
      <th>購入者</th>
      <td><%= link_to @order.name, admin_customer_path %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.address %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model: @order, local: true do |f| %>
          <%= f.select :status, options_for_select(Order.statuses_i18n, @order.status), {prompt: "プルダウンから選択"}, class: "status_select" %>
          <%= f.submit "更新" %>
        <% end %>
      </td>
    </tr>
  </table>
</div>
<div>
  <%= flash[:notice] %>
</div>



<div class="container">
  <table>
  <h4>注文履歴詳細</h4>
    <tr>
      <th>購入者</th>
      <td><%= link_to @order.name, admin_customer_path %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.address %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= I18n.t("enums.order.payment_method.#{@order.payment_method}") %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model: @order,url: admin_order_path(@order), method: :patch, local: true do |f| %>
          <div class="d-flex">
          <%= f.select :status, options_for_select(Order.statuses_i18n, @order.status), class: "form-select w-auto" %>
          <%= f.submit "更新", class: "btn btn-primary" %>
        <% end %>
      </td>
    </tr>
  </table>
</div>

<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= (order_detail.item.price * 1.1).to_i %></td>
          <td><%= order_detail.amount_ordered %></td>
          <td><%= (order_detail.item.price * 1.1 * order_detail.amount_ordered).to_i %></td>
          <td>
            <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch, local: true do |f| %>
              <div class="d-flex">
                <%= f.select :making_status, 
                      options_for_select(OrderDetail.making_statuses.keys.map { |key| [OrderDetail.making_statuses_i18n[key], key] }, order_detail.making_status), 
                      class: "form-select w-auto" %>
                <%= f.submit "更新", class: "btn btn-primary ms-2" %>
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
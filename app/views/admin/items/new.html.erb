<div class="container mt-5">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <%= render 'layouts/error_message', obj: @item %>
      <h3>商品新規登録</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <table>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品画像 %></th>
              <td><%= f.file_field :item_image, accept: "image/*" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品名 %></th>
              <td><%= f.text_field :name,  placeholder:"商品名" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品説明 %></th>
              <td><%= f.text_area :description, size: "50x5", placeholder:"ここに説明文を記述します" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :ジャンル %></th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :税抜価格 %></th>
              <td><%= f.text_field :price, placeholder:"1000" %>円</td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :販売ステータス %></th>
              <td>
                <%= f.radio_button :is_active, true, checked:true %>
                <%= f.label :販売中 %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :販売停止中 %>
              </td>
            </div>
          </tr>
          <tr>
            <div class="form-action">
              <th><%= f.submit "新規登録", class:"btn btn-success" %></th>
            </div>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
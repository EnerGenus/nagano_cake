<h3>商品詳細</h3>

<div>
  <%= image_tag @item.item_image, size: "300x300" %>
</div>
<table>
  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @item.description %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <th>税込価格</br>(税抜価格)</th>
    <td><%= @item.tax_in_price %>(<%= @item.price %>)円</td>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <td>
      <% if @item.is_active == true %>
        <p class="text-success">販売中</p>
      <% else %>
        <p class="text-secondary">販売停止中</p>
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= link_to "編集する", edit_admin_item_path, class: 'btn btn-success' %></th>
  </tr>
  
</table>

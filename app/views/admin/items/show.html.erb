<div class="container mt-5 mb-5">
  <h3>商品詳細</h3>
  <div class="row text-center text-xs-center text-sm-left text-md-left ">
    <div class="col-xs-12 col-sm-6 col-md-6 mx-auto text-left">
      <%= image_tag @item.item_image, size: "300x300" %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 item-details mx-auto">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.description %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格</br>(税抜価格)</th>
          <td><%= @item.with_tax_price %>円(<%= @item.price %>円）</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-secondary">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="col-sm-2 px-sm-0 mx-auto text-center mb-3">
    <%= link_to "編集する", edit_admin_item_path, class: 'btn btn-success' %>
  </div>
</div>
  

    <div class="row justify-content-center">
      <div class="col-md-12 col-lg-8">
        <%= form_with model: item, url: item.persisted? ? admin_item_path : admin_items_path, method: item.persisted? ? :patch : :post do |f| %>
        <table class="mx-auto">
          <tr>
            <th><%= f.label :item_image, "商品画像" %></th>
            <td><%= f.file_field :item_image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th><%= f.label :name, "商品名" %></th>
            <td><%= f.text_field :name,  placeholder:"商品名", class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label :description, "商品説明" %></th>
            <td><%= f.text_area :description, size: "50x5", placeholder:"ここに説明文を記述します", class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label :genre_id, "ジャンル" %></th>
            <td>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :price, "税抜価格" %></th>
              <td>
                <div class="input-group">
                  <%= f.text_field :price, placeholder: "1000", class: "form-control" %>
                <div class="input-group-append">
                  <span class="input-group-text">円</span>
                </div>
                </div>
              </td>
          </tr>
          <tr>
            <th><%= f.label :is_active, "販売ステータス" %></th>
            <td>
              <%= f.radio_button :is_active, true, checked:true %>
              <%= f.label :is_active_true, "販売中" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active_false, "販売停止中" %>
            </td>
          </tr>
          <tr>
            <td colspan="2" class="text-center">
              <div class="d-flex justify-content-center">
                <%= f.submit btntxt, class: "btn btn-success  px-4 py-2" %>
              </div>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
<h3>商品編集</h3>
<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <table>
    <tr>
      <th><%= f.label :商品画像 %></th>
      <td><%= f.file_field :item_image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th><%= f.label :商品名 %></th>
      <td><%= f.text_field :name, placeholder:"商品名" %></td>
    </tr>
    <tr>
      <th><%= f.label :商品説明 %></th>
      <td><%= f.text_area :description, placeholder:"ここに説明文を記述します" %></td>
    </tr>
    <tr>
      <th><%= f.label :ジャンル %></th>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
    </tr>
    <tr>
      <th><%= f.label :税抜価格 %></th>
      <td><%= f.text_field :price, placeholder:"1000" %>円</td>
    </tr>
    <tr>
      <th><%= f.label :販売ステータス %></th>
      <td>
        <%= f.radio_button :is_active, true, checked:true %>
        <%= f.label :販売中 %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :販売停止中 %>
      </td>
    <tr>
      <th><%= f.submit "変更を保存", class:"btn btn-success" %></th>
    </tr>

  </table>
<% end %>

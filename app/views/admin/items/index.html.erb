<div class="container mt-5">
<h3>商品一覧</h3>
<div class="pl-5">
<p class="my-3"><%= link_to new_admin_item_path do %>
  <button type="button" class="btn btn-outline-secondary btn-rounded btn-floating" >
    <i class="fa-solid fa-plus"></i>
  </button>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active == true %>
          <p class="text-success">販売中</p>
        <% else %>
          <p class="text-secondary">販売停止中</p>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= paginate @items %>
</div>
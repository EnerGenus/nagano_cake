<div class="container-fluid position-relative">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-8">
      <h5 class="d-inline-block p-2 m-4" style="background-color: #E0E0E0; color: #333;">ジャンル一覧・追加</h5>

      <div class="row mt-3">
      <div class="col-auto ">
        <%= form_with model: @genre, url: admin_genres_path, method: :post, class: "form-inline d-flex" do |f| %>
            <%= f.label :name, "ジャンル名" ,class: "mx-3" %>
            <%= f.text_field :name, class: "form-control w-40 mr-4", placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class:"btn btn-success px-4 " %>
        <% end %>
    </div>
  </div>

    <div class="justify-content-center mt-4">
      <div class="col-6">
        <table class="table">
          <thead style="background-color: #E0E0E0; color: #333;">
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>
        <tbody>
           <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>




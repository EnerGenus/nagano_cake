<div class="container">
  <div class="row">
    <h2>会員一覧</h2>

      <table class="table">
        <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to "#{customer.family_name}#{customer.first_name}", admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
           <td class="<%= customer.is_active ? 'text-success font-weight-bold' : 'text-secondary font-weight-bold' %>"><%= customer.is_active ? '有効' : '退会' %></td>
          </tr>
        <% end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
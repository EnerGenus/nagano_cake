<header>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><span>LOGO(仮）</span></a>
      <div class = "row">
        <div class="col-lg-12">
          <div class="row justify-content-end mr-2">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          </div>
          <div class="row  justify-content-end mr-2 collapse navbar-collapse justify-content-lg-end" id="navbarNavDropdown">
            <ul class="navbar-nav d-flex flex-lg-row flex-wrap">
              <% if admin_signed_in? %>
                <li>
                  <%= link_to admin_items_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-cake-candles"></i> 商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_customers_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-users"></i> 会員一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_root_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-barcode"></i> 注文履歴一覧
                  <% end %>
                  </li>
                <li>
                  <%= link_to admin_genres_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-shapes"></i> ジャンル一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-right-from-bracket"></i> ログアウト
                  <% end %>
                </li>
              <% elsif customer_signed_in? %>
                <li>
                  <%= link_to customers_mypage_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-user"></i> マイページ
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-cake-candles"></i> 商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to cart_items_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-cart-shopping"></i> カート
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-right-from-bracket"></i> ログアウト
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to about_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-house">About</i>
                  <% end %>
                <li>
                  <%= link_to items_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-cake-candles"></i> 商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-user-plus"></i> 新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_session_path, class: 'btn btn-outline-secondary mx-1 my-1' do %>
                    <i class="fa-solid fa-right-to-bracket"></i> ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
          <div class= "row justify-content-end mt-1 mr-1">
            <div class="col-12  d-flex justify-content-end">
              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :query, required: true %>
          
                <% if admin_signed_in? %>
                  <%= f.select :search_type, [['会員', 'Customer'], ['商品', 'Item']] %>
                <% else %>
                  <%= f.hidden_field :search_type, value: 'Item' %>
                <% end %>
          
                <%= f.hidden_field :match_type, value: 'partial' %>
                <%= f.submit "検索" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
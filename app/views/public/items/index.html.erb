<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h3>商品一覧(全<%= @all_items.count %>件)</h3>
    </div>
  </div>
  <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
    <% @items.each do |item| %>
      <% if item.is_active == true %>
        <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
          <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.item_image, width: 220, height: 160, class: "img-resize, rounded mx-auto d-block", style: "object-fit: cover;" %>
            <% end %>
            <div class="card-body text-body">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text">¥ <%= item.with_tax_price.to_s(:delimited) %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-12 d-flex justify-content-center">
    <%= paginate @items %>
  </div>
</div>
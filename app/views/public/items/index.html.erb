<div class="container-fluid">
  <div class="row m-5 justify-content-center">
    <div class="col-xxl-3 ml-6">
      <%= render 'sidebar', genres: @genres %> 
    </div>
    <div class="col-9 px-sm-0 ml-5">
      <h2>商品一覧</h2><p>(全<%= @all_items.count %>件)</p>
  
      <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
        <% @items.each do |item| %>
          <% if item.is_active == true %>
              <div class="card text-center bg-transparent border-0" style="width: 18rem;">
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.item_image, width: 220, height: 160, class: "img-resize, rounded mx-auto d-block", style: "object-fit: cover;" %>
                <% end %>
                <div class="card-body text-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text">¥ <%= item.with_tax_price.to_s(:delimited) %></p>
                </div>
              </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-12 d-flex justify-content-center">
    <%= paginate @items %>
  </div>
</div>
<h3>商品一覧(全<%= @all_items.count %>件)</h3>
<div class="d-flex flex-wrap">
  <% @items.each do |item| %>
    <% if item.is_active == true %>
      <div class="card m-2 p-1 card-hover" style="width: 18rem;">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.item_image, size: "150x150" %>
        <% end %>
        <div class="card-body text-body">
          <h5 class="card-title"><%= item.name %></h5>
          <p class="card-text">¥ <%= item.with_tax_price %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<%= paginate @items, class: "text-center" %>
<div class=" container">
  <div class="row">
    <div class="col-lg-2">
      <h5 class="d-inline-block p-2 m-4", style="background-color: #e0e0e0; color: #333;">新規会員登録</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="customer_sign_up">
          <tr>
            <th>名前</th>
            <td>(姓) </td>
            <td>
              <%= f.text_field :family_name, autofocus: true,autocomplete:"family_name" %>            
              (名) <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>(セイ) </td>
            <td>
              <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
              (メイ) <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td></td>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td></td>
            <td>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </td>
          </tr>
          <tr>
            <th>住所</th>
            <td></td>
            <td>
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </td>
          </tr>
          <tr>
            <th>電話番号(ハイフンなし)</th>
            <td></td>
            <td>
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
            </td>
          </tr>
          <tr>
            <th>パスワード(6文字以上)</th>
            <td></td>
            <td>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th>パスワード(確認用)</th>
            <td></td>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </tr>
        </table>
        <div class="submit">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3">
      <h5>既に登録済みの方</h5></br>
      <%= link_to "こちら", new_customer_session_path %> からログインしてください。
    </div>
  </div>
</div>

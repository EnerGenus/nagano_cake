<div class=" container">
  <div class="row">
    <div class="col-lg-4">
      <h5 class="d-inline-block p-2 m-4", style="background-color: #e0e0e0; color: #333;">新規会員登録</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table>
          <tr>
            <th class="pb-2">名前</th>
            <td class="pb-2">(姓) </td>
            <td class="pb-2">
              <%= f.text_field :family_name, autofocus: true,autocomplete:"family_name", placeholder: "山田", class: "form-control rounded " %>
            </td>
            <td class="pb-2">(名) </td>
            <td class="pb-2">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "花子", class: "form-control rounded" %>
            </td>
          </tr>
          <tr>
            <th class="pb-2">フリガナ</th>
            <td class="pb-2">(セイ) </td>
            <td class="pb-2">
              <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana", placeholder: "ヤマダ", class: "form-control rounded" %>
            </td>
            <td class="pb-2">(メイ) </td>
            <td class="pb-2">
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ハナコ", class: "form-control rounded" %>
            </td>
          </tr>
          <tr>
            <th class="pb-2">メールアドレス</th>
            <td></td>
            <td class="pb-2">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control rounded" %>
            </td>
          </tr>
          <tr>
            <th class="pb-2">郵便番号(ハイフンなし)</th>
            <td></td>
            <td class="pb-2">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000", class: "form-control rounded" %>
            </td>
          </tr>
          <tr>
            <th class="pb-2">住所</th>
            <td></td>
            <td class="pb-2" colspan="3">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "Ａ県Ｂ市Ｃ町１－２－３", style: "width: 100%;", class: "form-control rounded" %>
            </td>
          </tr>
          <tr>
            <th class="pb-2">電話番号(ハイフンなし)</th>
            <td></td>
            <td class="pb-2">
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "01023456789", class: "form-control rounded" %>
            </td>
          </tr>
          <tr>
            <th class="pb-2">パスワード(6文字以上)</th>
            <td></td>
            <td class="pb-2">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded" %>
            </td>
          </tr>
          <tr>
            <th class="pb-2">パスワード(確認用)</th>
            <td></td>
            <td class="pb-2">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded" %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td></td>
            <td>
              <%= f.submit "新規登録", class: "btn btn-success w-100" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <h5 class="d-inline-block p-2 m-4", style="background-color: #e0e0e0; color: #333;">既に登録済みの方</h5></br>
      <strong><%= link_to "こちら", new_customer_session_path %> からログインしてください。</strong>
    </div>
  </div>
</div>

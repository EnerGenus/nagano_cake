<div class="container">
  <div class="row">
    <h3 class="col-md-11">配送先登録 / 一覧</h3>
  </div>
  <div class="row">
    <div class="col-md-11 mx-auto">
      <% if @address.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @address.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@address,local:true do |f| %>
        <div class="form-group">
          <%= f.label :"郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, class: "form-control postal_code", placeholder: "0000000" %>
        </div>
        <div class="form-group">
          <%= f.label :"住所" %>
          <%= f.text_field :address, class: "form-control address", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
        <div class="form-group">
          <%= f.label :"宛名" %>
          <%= f.text_field :name, class: "form-control name", placeholder: "令和道子" %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", address, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'layouts/error_message', obj: @address %>
<%= form_with model:address,local:true do |f| %>
  <div class="form-group row w-100">
    <div class="col-lg-3">
      <%= f.label :"郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-lg-5">
      <%= f.text_field :postal_code, class: "form-control postal_code", placeholder: "0000000" %>
    </div>
    <div class="col-lg-2">
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <div class="form-group row w-100">
    <div class="col-lg-3">
      <%= f.label :"住所" %>
    </div>
    <div class="col-lg-7">
      <%= f.text_field :address, class: "form-control address", placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <div class="form-group row w-100">
    <div class="col-lg-3">
      <%= f.label :"宛名" %>
    </div>
    <div class="col-lg-5">
      <%= f.text_field :name, class: "form-control name", placeholder: "令和道子" %>
    </div>
    <div class="col-lg-2">
    </div>
    <div class="col-lg-2">
      <%= f.submit obj, class: "btn btn-success" %>
    </div>
  </div>

<% end %>
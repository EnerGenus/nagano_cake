<div class=" container">
  <div class="row">
    <div class="col-lg-2">
      <h5 class="d-inline-block p-2 m-4", style="background-color: #e0e0e0; color: #333;">会員情報編集</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <%= render 'layouts/error_message', obj: @customer %>
      <%= form_with model: @customer, url: customers_information_path, method: :patch, local: true do |f| %>
        <%= render "public/shared/error_messages", resource: @customer %>
        <table>
          <tr>
            <th>氏名</th>
            <td>
              <%= f.text_field :family_name, autofocus: true,autocomplete:"family_name", placeholder: "山田" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "花子" %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana",  placeholder: "ヤマダ" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ハナコ" %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
            </td>
          </tr>
          <tr>
            <th>住所</th>
            <td>
              <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "Ａ県Ｂ市Ｃ町１－２－３" %>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td>
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "01023456789" %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.submit "編集内容を保存", class: "btn btn-success" %>
              <%= link_to "退会する", unsubscribe_path, class:"btn btn-danger my-4 offset-sm-1"  %>
            </th>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>

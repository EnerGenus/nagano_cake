<div class="container">
  <div class="row">
    <h3 class="col-md-11">注文履歴一覧</h3>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% if @orders.present? %>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.created_at.strftime("%Y/%m/%d") %>
              </td>
              <td>
                〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td>
                <% order.order_detail.each do |order_detail| %>
                  <%= order_detail.item.name %></br>
                <% end %>
              </td>
              <td>
                <%= order.total_payment %>円
              </td>
              <td>
                <%= t("enums.order.status.#{order.status}") %>
              </td>
              <td>
                <%= link_to "表示する", order_path(order), class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6">注文データがありません</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <h3 class="col-md-11">注文情報入力</h3>
  </div>
  <div class="row">
    <ul class="list-unstyled">
      <li><b>支払方法</b>
        <ul>
          <%= form.radio_button :payment_method, :0 %>
          <%= form.label :payment_method_0, %>
        </ul>
        <ul>
          <%= form.radio_button :payment_method, :1 %>
          <%= form.label :payment_method_1, %>
        </ul>
      </li>
      <%= form_with model: @order, url: "/orders/confirm", method: :post, local: true do |f| %>
        <h3>お届け先</h3>

        <!-- (0) 会員情報の住所を使う -->
        <%= f.radio_button :address_option, 0, checked: true %>
        <%= f.label :order_address, "ご自身の住所" %>
        〒<%= current_member.post_code %>
        <%= current_member.address %>
        <%= current_member.last_name %> <%= current_member.first_name %>
          <!-- (1) 住所帳から選択 -->
        <%= f.radio_button :address_option, 1 %>
        <%= f.label :order_address, "登録済住所から選択" %>
        <%= f.collection_select :member_id, @addresses, :id, :full_address %>
          <!-- (2) 新規住所入力 -->
        <%= f.radio_button :address_option, 2 %>
        <%= f.label :order_address, "新しいお届け先" %>

        <%= f.label :shipping_post_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :shipping_post_code %>

        <%= f.label :shipping_address, "住所" %>
        <%= f.text_field :shipping_address %>

        <%= f.label :shipping_name, "宛名" %>
        <%= f.text_field :shipping_name %>

        <%= f.submit "確認画面へ進む" %>
      <% end %>
    </ul>
  </div>
  
</div>



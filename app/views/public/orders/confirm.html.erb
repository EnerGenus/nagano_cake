<div class="container">
  <div class="row">
    <h3 class="col-md-11">注文情報確認
    </h3>
  </div>
  <div class="row">
    <table class="table table-bordered col-md-2"> 
      <thead>
        <tr>
          <th class="table-active" style="width:50%">商品名</th>
          <th class="table-active" style="width:20%">単価(税込)</th>
          <th class="table-active" style="width:15%">数量</th>
          <th class="table-active" style="width:15%">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @total = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.item_image, size: "50x50" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td><%= cart_item.subtotal %></td>
          </tr>
          <% @total += cart_item.subtotal %>
        <% end %>
      </tbody>
    </table>
    <table class="table table-bordered col-md-4">
      <tr>
        <th class="table-active" style="width:50%">送料</th>
        <td>800</td>
      </tr>
      <tr>
        <th class="table-active" style="width:50%">商品合計</th>
        <td><%= @total %></td>
      </tr>
      <tr>
        <th class="table-active" style="width:50%">請求金額</th>
        <td><%= @total + 800 %></td>
      </tr>      
    </table>
  </div>
  <div class="row">
    <p><strong>支払方法</strong></p>
    <p><%= t("enums.order.payment_method.#{@order.payment_method}") %></p>
  </div>
  <div class="row">
    <p><strong>お届け先</strong></p>
    <p>〒<%= @order.postal_code %> <%= @order.address %></p><br>
    <p><%= @order.name %></p>
  </div>
  <div class="row">
    <%= form_with model: @order, url: orders_path, method: :post, local: true, scope: :order do |f| %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%= f.hidden_field :address, value: @order.address %>
      <%= f.hidden_field :name, value: @order.name %>
      <%= f.hidden_field :shipping_cost, value: 800 %>
      <% @order.total_payment = @total.to_i + 800 %>
      <%= f.hidden_field :total_payment, value: @order.total_payment %>
      <%= f.hidden_field :status, value: 0 %>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <%= f.submit "注文を確定する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
